# EditorConfig helps maintain consistent coding styles between editors and IDEs
# https://editorconfig.org

root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Java files
[*.java]
indent_size = 2

# XML, POM, HTML
[*.{xml,html,xhtml}]
indent_size = 2

# Markdown files â€” allow trailing whitespace for formatting
[*.md]
trim_trailing_whitespace = false

# YAML files (e.g., GitHub Actions or devcontainer)
[*.yml]
indent_size = 2

# Properties files
[*.properties]
indent_style = space
indent_size = 2
